{% endcapture %}
{% if tag_time %}
<div class="countdown_wrap">
  <div class="countdown_time" id="js_set_time" >
    <div class="timer-block">
      <!-- <span class="countdown_number js-days">00</span>
      <span class="countdown_title">Days</span> -->
      <div class="endin_txt d_inline_block">
        <span>Ends in</span>
      </div>
      <div class="hours_count d_inline_block">
        <span class="countdown_number js-hours">00</span><span class="countdown_title">h</span>
      </div>
      <div class="minute_count d_inline_block">
        <span class="countdown_number js-minutes">00</span><span class="countdown_title">m</span>
      </div>
      <div class="second_count d_inline_block">
        <span class="countdown_number js-seconds">00</span><span class="countdown_title">s</span>
      </div>
    </div>
    
    
    
  </div>
</div>
