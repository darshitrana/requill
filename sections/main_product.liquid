  var month = date.getMonth();
  var year = date.getFullYear();

  var leftHour = 23 - hour;
  var leftMinute = 59 - minute;
  var leftSeconds = 59 - second;
  var leftHours = 16 - hour - 1;
  var leftTime = (leftHour * 3600) + (leftMinute * 60) + leftSeconds;
  var leftTime1 = (leftHours * 3600) + (leftMinute * 60) + leftSeconds;
  var timer = document.getElementById('date_tinmer');
  var timer1 = document.getElementById('date_tinmers');
  setInterval(updateTimer, 1000);

  function updateTimer() {
    var h = Math.floor(leftTime / 3600);
    var hs = Math.floor(leftTime1 / 3600);
    var m = Math.floor((leftTime - (h * 3600)) / 60);
    var ms = Math.floor((leftTime1 - (hs * 3600)) / 60);

    if (hour < 16) {
      timer1.innerHTML = " Order in the next " + hs + " hours and " + ms + " minutes " +
        " for <span class='date_time_offer'> same day shipping. </span>";
      leftTime1--;
    } else {
      timer.innerHTML = " Order in the next " + h + " hours and " + m + " minutes " +
        " for shipping by <span class='date_time_offer'> 2pm tomorrow </span>";
      leftTime--;
    }


  }
</script>

