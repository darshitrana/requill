<div class="{% unless section.settings.full_width %}page-width{% endunless %}">
  <div class="text-with-author {% if section.settings.full_width %} rich-text--full-width{% endif %}">
     
           {% if section.settings.heading != blank %}
            <h2 class="h2">{{ section.settings.heading }}</h2>
           {% endif %}  
          <div class="text-author__wrap">
            {%- if section.settings.image != blank -%}
              <img 
                src="{{ section.settings.image | img_url: 'master' }}"
                class="image_author__wrap"
                alt="{{ section.settings.image.alt | default: shop.name | escape }}"
              >
            {%- endif -%}
            {%- if section.settings.text != blank or section.settings.text-founder != blank -%}
              <div class="text_blocks__wrap ">         
                <h4 class="h3" >{{ section.settings.text  }}</h4>      
                <h6 class="text-wrap">{{ section.settings.text-founder }}</h6>  
              </div> 
          {%- endif -%} 
      </div>
  </div>
</div>
{% schema %}
{
  "name": "Text With Author",
  "tag": "section",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "t:sections.rich-text.settings.full_width.label"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Author Name"
    },
    {
      "type": "text",
      "id": "text-founder",
      "label": "Founder"
    }
  ],
  "presets": [
    {
      "name": "Text With Author"
    }
  ]
}
{% endschema %}