<div class="page-width static-pages">
      {%- if section.settings.heading -%}
        <h3 class="h4">{{ section.settings.heading }}</h3>
      {%- endif -%}
      {%- if section.settings.content != blank -%}
         <div class="text__content">{{ section.settings.content }}</div>
      {%- endif -%}
      {%- for block in section.blocks -%}
          <div class="accordion">
            {%- if  block.settings.question != blank and block.settings.answer != blank -%}
              <div class="accordion__title" data-qa-index="{{ forloop.index }}">
                 <p class="accordion__title__inner">{{ block.settings.question }} {%- render 'icons', icons: 'arrow-down'-%}</p>
              </div>
              <div class="accordion__content" style="display: none;" data-qa-index="{{ forloop.index }}">
                {{ block.settings.answer }}
              </div>
             {%- endif -%} 
          </div> 
       {%- endfor -%}
  </div>
  
  {% schema %}
    {
      "name": "Accordian Section",
      "settings": 
          [
            {
              "type": "text",
              "id": "heading",
              "label": "heading"
            },
            {
              "type": "richtext",
              "id": "content",
              "label": "Add your Content"
            }
          ],
      "blocks":[
            {
            "type": "question",
            "name": "Questions",
            "settings":
              [
                {
                "type": "text",
                "id": "question",
                "label": "Qustion type here"
                },
                {
                "type": "richtext",
                "id": "answer",
                "label": "Type here answer"
                }
              ]
            }
        ],
        "presets": [
          {
            "name": "Accordian Section"
          }
        ] 
  }
   
  {% endschema %}
  
  {% stylesheet %}
  {% endstylesheet %}
  
  {% javascript %}
  {% endjavascript %}
  
  
  